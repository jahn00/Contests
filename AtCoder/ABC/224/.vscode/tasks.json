{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "compile c++",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-Wall",
				"-Wno-sign-compare",
				"-Wno-unused-result",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}